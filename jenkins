pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                 credentialsId: 'huihui',
                  url: 'https://github.com/Piyush-patra/privatespringrepo.git'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn  test'
            }
        }

        // stage('SonarQube Analysis') {
